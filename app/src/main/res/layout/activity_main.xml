<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackground"
        tools:context=".MainActivity">

    <ImageView
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:tint="#FFFFFF"
            android:src="@drawable/logosantander"
            android:padding="20dp"
    />
    <View
            android:id="@+id/View_logo"
            android:layout_width="wrap_content"
            android:layout_height="10dp"
            android:visibility="visible"
            android:background="#FFFF"
            app:layout_constraintTop_toBottomOf="@id/logo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
    />

    <TextView
            android:textSize="20sp"
            android:textStyle="bold"
            android:id="@+id/text_name"
            android:inputType="textPersonName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Titular"
            app:layout_constraintTop_toBottomOf="@id/View_logo"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_margin="10dp"
            android:textColor="#FFFF"/>
    <EditText
            android:id="@+id/edit_name"
            app:layout_constraintTop_toBottomOf="@id/text_name"
            android:background="@drawable/arredonda"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:padding="15dp"
            android:layout_margin="10dp"
            android:hint="Nome"
    />
    <EditText
            android:id="@+id/edit_sobrenome"
            app:layout_constraintTop_toBottomOf="@id/edit_name"
            android:background="@drawable/arredonda"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:padding="15dp"
            android:layout_margin="10dp"
            android:hint="Sobrenome"


    />
    <TextView
            android:textSize="20sp"
            android:textStyle="bold"
            android:id="@+id/text_conta"
            android:inputType="textPersonName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Conta "
            app:layout_constraintTop_toBottomOf="@id/edit_sobrenome"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_margin="10dp"
            android:textColor="#FFFF"/>
    <EditText
            android:id="@+id/edit_Conta"
            app:layout_constraintTop_toBottomOf="@id/text_conta"
            android:background="@drawable/arredonda"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:padding="15dp"
            android:layout_margin="10dp"
            android:hint="xxxxxxx"
            android:inputType="number"


    />

    <Button
            android:id="@+id/btn_entrar"
            android:text="Entrar"
            app:layout_constraintTop_toBottomOf="@id/edit_Conta"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/arredonda_botao"
            android:textColor="#FFFF"
            android:textStyle="bold"

            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


</androidx.constraintlayout.widget.ConstraintLayout>