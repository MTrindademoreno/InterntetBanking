<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackground"
        tools:context=".Operacoes">

    <ImageView
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:tint="#FFFFFF"
            android:src="@drawable/logosantander"
            android:padding="20dp"
    />
    <View
            android:id="@+id/View_logo"
            android:layout_width="wrap_content"
            android:layout_height="10dp"
            android:visibility="visible"
            android:background="#FFFF"
            app:layout_constraintTop_toBottomOf="@id/logo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
    />

    <Button
            android:text="SACAR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/arredonda_botao"
            android:textColor="#FFFF"
            android:textStyle="bold"
            android:id="@+id/btn_sacar"
            app:layout_constraintStart_toEndOf="@id/btn_depositar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_click"
            app:layout_constraintTop_toTopOf="@id/btn_depositar"

    />
    <TextView
            android:textSize="20sp"
            android:textStyle="bold"
            android:id="@+id/text_saldo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Saldo"
            app:layout_constraintTop_toBottomOf="@id/View_logo"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="35dp"

            android:padding="15dp"
            android:textColor="#FFFF"/>
    <TextView
            android:textSize="15sp"
            android:textStyle="bold"
            android:id="@+id/conta"
            android:text="Conta Número: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/View_logo"
            app:layout_constraintStart_toStartOf="parent"
            android:padding="15dp"
            android:layout_margin="5dp"
            android:textColor="#FFFF"/>
    <TextView
            android:textSize="15sp"
            android:textStyle="bold"
            android:id="@+id/conta_num"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/View_logo"
            app:layout_constraintEnd_toEndOf="parent"
             app:layout_constraintStart_toEndOf="@id/conta"
            android:layout_margin="5dp"
            android:padding="15dp"
            android:textColor="#FFFF"/>
    <TextView
            android:textSize="20sp"
            android:textStyle="bold"
            android:id="@+id/text_valorop"
            android:inputType="textPersonName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Valor da Operação"
            app:layout_constraintTop_toBottomOf="@id/text"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_margin="10dp"
            android:layout_marginTop="20dp"
            android:textColor="#FFFF"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/edit_valor"
            android:padding="15dp"
            android:layout_margin="10dp"
            android:background="@drawable/arredonda"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_valorop"/>
    <TextView
            android:text="TextView"
            android:background="@drawable/arredonda"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:layout_margin="10dp"
            android:id="@+id/text"
            android:textSize="20sp"
            android:textColor="#050404"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_saldo"/>
    <TextView
            android:textSize="20sp"
            android:textStyle="bold"
            android:id="@+id/text_click"
            android:inputType="textPersonName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selecione a operação"
            app:layout_constraintTop_toBottomOf="@id/edit_valor"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="30dp"
            android:textColor="#FFFF"/>

    <Button
            android:text="DEPOSITAR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/arredonda_botao"
            android:textColor="#FFFF"
            android:textStyle="bold"
            android:id="@+id/btn_depositar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btn_sacar"
            app:layout_constraintTop_toBottomOf="@id/text_click"
            android:layout_marginTop="40dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>